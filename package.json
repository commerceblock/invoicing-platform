{
  "name": "invoicing-platform",
  "version": "0.1.0",
  "scripts": {
    "start": "MOCKED_DATABASE=true env-cmd deployment/environment/security.env.local nodemon ./deployment/devServer --ignore frontend --exec babel-node",
    "start:remote": "MOCKED_DATABASE=false env-cmd deployment/environment/security.env.local nodemon ./deployment/devServer --ignore frontend --exec babel-node",
    "update-schema": "babel-node deployment/graphql/updateSchema.js",
    "build:frontend": "NODE_ENV=production env-cmd deployment/environment/security.env.prod webpack --progress --config deployment/webpack/webpack.prod.js -p && cp ./frontend/favicon.ico ./build/frontend/favicon.ico",
    "build:backend": "NODE_ENV=production babel --out-dir='build/backend' --ignore='__tests__/*' ./backend && cp ./backend/kms-secrets.*.yml ./backend/package.json ./backend/yarn.lock ./backend/serverless.yml ./build/backend",
    "build:backend:node_modules": "cd build/backend && yarn && cd ../../",
    "deploy": "npm run deploy:backend && npm run deploy:frontend",
    "deploy:frontend": "npm run build:frontend && aws s3 sync build/frontend/ s3://<your-s3-bucket-name>/",
    "deploy:backend": "npm run build:backend && npm run build:backend:node_modules && cd build/backend && serverless --stage=prod deploy",
    "lint": "npm run lint:eslint && npm run lint:css",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint:css": "stylelint ./frontend/**/*.css",
    "lint:staged": "lint-staged",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "npm test -- --coverage --collectCoverageFrom 'frontend/**/*.js' --collectCoverageFrom 'backend/**/*.js' --collectCoverageFrom 'deployment/**/*.js'"
  },
  "lint-staged": {
    "lint:eslint": "*.js",
    "stylelint": "*.css"
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "bs58": "^4.0.1",
    "bunyan": "^1.8.10",
    "dynamoose": "^0.8.3",
    "http-status-codes": "^1.2.0",
    "lodash": "^4.17.4",
    "uuid": "^2.0.3",
    "babel-polyfill": "^6.16.0",


    "apollo-client": "^1.0.0-rc.2",
    "classnames": "2.2.5",
    "graphql-tag": "^1.2.3"
  },
  "devDependencies": {
    "aws-sdk": "^2.63.0",
    "serverless-cors-plugin": "^0.4.2",
    "serverless-dynamodb-local": "^0.2.18",
    "serverless-kms-secrets": "^0.9.7",
    "serverless-offline": "^3.8.3",


    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-preset-stage-2": "^6.16.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "body-parser": "^1.15.2",
    "css-loader": "^0.27.2",
    "env-cmd": "^5.0.0",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-flowtype": "^2.11.4",
    "eslint-plugin-import": "^2.2.0",
    "exports-loader": "^0.6.3",
    "express": "^4.15.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.5",
    "file-loader": "^0.10.0",
    "flow-bin": "^0.42.0",
    "graphql": "^0.9.1",
    "html-webpack-plugin": "^2.21.0",
    "identity-obj-proxy": "^3.0.0",
    "iflow-lodash": "^1.1.24",
    "jest-cli": "^19.0.0",
    "lint-staged": "^3.0.3",
    "nodemon": "^1.10.0",
    "pre-commit": "^1.1.3",
    "require-clean": "0.1.3",
    "serve-favicon": "^2.3.0",
    "style-loader": "^0.14.1",
    "stylelint": "^7.3.1",
    "stylelint-config-standard": "^16.0.0",
    "url-loader": "^0.5.7",
    "uuid-js": "^0.7.5",
    "webpack": "^2.2.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.11.0",
    "webpack-md5-hash": "0.0.5",
    "whatwg-fetch": "^2.0.1"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(jpg|png|gif|eot|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/foundation/jest/fileMock.js",
      "^.+\\.css$": "<rootDir>/foundation/jest/cssMock.js"
    }
  }
}
